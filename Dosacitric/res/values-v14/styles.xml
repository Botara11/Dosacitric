<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">#FFF000</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppThemeXX" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
		<item name="android:background">#000000</item>
        
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle" > @style/MyActionBar</item>
    	<item name="actionBarStyle">@style/MyActionBar</item>
    	<item name="android:textColor">#000000</item>
    </style>
    
    <style name="AppTheme2" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle" > @style/MyActionBar</item>
    	<item name="actionBarStyle">@style/MyActionBar</item>
    	<item name="android:textColor">#000000</item>
    </style>
    
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    	<item name="android:background">@color/actionBarColor</item>
    	<item name="background">@color/actionBarColor</item>
    	<item name="android:textColor">#000000</item>
	</style>
	
    <style name="MyBlackActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
    	<item name="android:background">@color/actionBarColor</item>
    	<item name="background">@color/actionBarColor</item>
    	<item name="android:textColor">#FFFFFF</item>
	</style>

    
    <style name="mytheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle" > @style/MyActionBar</item>
    	<item name="actionBarStyle">@style/MyActionBar</item>
        
    	<item name="android:textColor">#FFFFFF</item>
       <item name="android:background">#000000</item>
    </style>

</resources>