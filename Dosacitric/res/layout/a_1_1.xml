<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF8000" >

    <TableLayout
        android:id="@+id/table"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="bottom" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/atras"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="10dip"
                android:text="Atrás"
                android:textColor="#E65F00" />

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="#E65F00" />

            <Button
                android:id="@+id/indice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="10dip"
                android:text="Índice"
                android:textColor="#E65F00" />

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="#E65F00" />

            <Button
                android:id="@+id/siguiente"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="10dip"
                android:text="Siguiente"
                android:textColor="#E65F00" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/table" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Densidad foliar del cultivo"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/spinner1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:background="#00000000"
                android:text="Marco de plantación"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView2"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="26dp"
                android:layout_toLeftOf="@+id/anchuraArb"
                android:background="#00000000"
                android:text="x: Ancho de la calle"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView3"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toLeftOf="@+id/distancia"
                android:background="#00000000"
                android:text="y: Distancia entre árboles"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView4"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="39dp"
                android:background="#00000000"
                android:text="Dimensiones de los árboles"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView5"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/anchuraArb"
                android:background="#00000000"
                android:text="I: Longitud de los árboles"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView6"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/anchuraArb"
                android:background="#00000000"
                android:text="II: Anchura de los árboles"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView7"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/anchuraArb"
                android:background="#00000000"
                android:text="III: Altura de los árboles"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/anchocalle"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/distancia"
                android:layout_alignRight="@+id/distancia"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="26dp"
                android:layout_toLeftOf="@+id/textView9"
                android:layout_toRightOf="@+id/textView4"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="number|textVisiblePassword" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/longitudArb"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/distancia"
                android:layout_alignRight="@+id/anchuraArb"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="number|textVisiblePassword"
                android:maxLines="1" />

            <EditText
                android:id="@+id/anchuraArb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignLeft="@+id/distancia"
                android:layout_alignRight="@+id/distancia"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="number|textVisiblePassword" />

            <EditText
                android:id="@+id/alturaArb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView8"
                android:layout_alignLeft="@+id/anchuraArb"
                android:layout_alignRight="@+id/anchuraArb"
                android:layout_below="@+id/anchuraArb"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="number|textVisiblePassword" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/anchocalle"
                android:layout_alignBottom="@+id/anchocalle"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="m"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="m"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="m"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="m"
                android:textColor="#FFFFFF" />

            <EditText
                android:id="@+id/distancia"
                android:layout_width="40sp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView4"
                android:layout_marginRight="6sp"
                android:layout_toLeftOf="@+id/textView10"
                android:background="#FFFFFF"
                android:ems="10"
                android:inputType="number|textVisiblePassword"
                android:minLines="1"
                android:minWidth="40dp" >
            </EditText>

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignBottom="@+id/textView1"
                android:layout_alignTop="@+id/textView1"
                android:layout_marginLeft="16sp"
                android:layout_marginRight="16sp"
                android:layout_toRightOf="@+id/textView1" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/textView2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/textView2"
                android:src="@drawable/inter" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_above="@+id/textView6"
                android:layout_alignLeft="@+id/spinner1"
                android:layout_marginLeft="10dp"
                android:src="@drawable/inter" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/longitudArb"
                android:layout_alignLeft="@+id/textView12"
                android:text="m"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>