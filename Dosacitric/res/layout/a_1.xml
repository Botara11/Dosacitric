<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <TableLayout
        android:id="@+id/table"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="bottom" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/indice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="10dip"
                android:text="INDICE"
                android:textColor="#E65F00" />

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="#E65F00" />

            <Button
                android:id="@+id/siguiente"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="10dip"
                android:text="SIGUIENTE"
                android:textColor="#E65F00" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/table" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="152dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="#00000000"
                android:text="FECHA"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView4"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:text="IDENTIFICACIÓN DE PARCELA"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/fecha"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_above="@+id/textView6"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@+id/textView8"
                android:background="#FFFFFF"
                android:ems="10"
                android:gravity="center"
                android:inputType="number|textVisiblePassword"
                android:minLines="1"
                android:minWidth="40dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/idTratamiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/idParcela"
                android:layout_alignRight="@+id/textView7"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:digits=" /-ABCDEFGHIJKLMNÑOPQRSTUVWXYZabcdefghijklmnñopqrstuvwxyz1234567890"
                android:ems="10"
                android:gravity="center" />

            <EditText
                android:id="@+id/idParcela"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/fecha"
                android:layout_alignRight="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:digits=" /-ABCDEFGHIJKLMNÑOPQRSTUVWXYZabcdefghijklmnñopqrstuvwxyz1234567890"
                android:ems="10"
                android:gravity="center"
                android:maxLines="1" />

            <EditText
                android:id="@+id/referencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/idTratamiento"
                android:layout_alignTop="@+id/textView8"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/textView8"
                android:background="#FFFFFF"
                android:digits=" /-ABCDEFGHIJKLMNÑOPQRSTUVWXYZabcdefghijklmnñopqrstuvwxyz1234567890"
                android:ems="10"
                android:gravity="center" >
            </EditText>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignRight="@+id/idParcela"
                android:layout_below="@+id/idParcela"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:text="IDENTIFICACIÓN DEL TRATAMIENTO"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView6"
                android:layout_below="@+id/idTratamiento"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:text="REFERENCIA"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>