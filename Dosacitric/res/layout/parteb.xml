<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#C15100">

    <RadioButton
        android:id="@+id/TextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:text="Volumen aplicación calculado"
        android:textSize="15sp" 
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/TextView1"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/TextView1"
        android:text="3000 L/ha" 
        android:textColor="@color/white"/>

    <RadioButton
        android:id="@+id/TextView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView1"
        android:layout_below="@+id/TextView1"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:text="Volumen de aplicacion siguiente"
        android:textSize="15sp" 
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView10"
        android:layout_toRightOf="@+id/TextView10"
        android:ems="10"
        android:textSize="15sp" 
        android:textColor="@color/white">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="21dp"
        android:text="Volúmen de aplicación (V)"
        android:textSize="17sp" 
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/RadioButton01"
        android:layout_below="@+id/RadioButton02"
        android:layout_toRightOf="@+id/RadioButton01"
        android:ems="10"
        android:textSize="15sp" 
        android:textColor="@color/white"/>

    <RadioButton
        android:id="@+id/RadioButton02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView10"
        android:layout_below="@+id/TextView01"
        android:ems="10"
        android:text="Ancho de trabajo calculado"
        android:textSize="15sp" 
        android:textColor="@color/white"/>

    <RadioButton
        android:id="@+id/RadioButton01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/RadioButton02"
        android:layout_below="@+id/RadioButton02"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:text="Ancho de trabajo siguiente"
        android:textSize="15sp" 
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView10"
        android:text="Ancho de trabajo (a)"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="7dp"
                android:layout_marginBottom="13dp"
        
        android:textSize="17sp" 
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/RadioButton02"
        android:layout_marginTop="33dp"
        android:layout_toRightOf="@+id/RadioButton02"
        android:text="3000 m" 
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_alignRight="@+id/TextView04"
        android:layout_below="@+id/RadioButton01"
        android:layout_marginTop="21dp"
        android:text="Velocidad de avance deseada (v)"
        android:textSize="17sp" 
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView03"
        android:layout_marginTop="3dp"
        android:textColor="@color/green"
        android:text="(Comprendida entre 0,99 y 6,01)"
        android:textSize="13sp" />
    <EditText
        android:id="@+id/EditText03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TextView03"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:textSize="15sp" 
        android:textColor="@color/white"/>

</RelativeLayout>