<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <TableLayout
        android:id="@+id/table"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="bottom" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/indice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="10dip"
                android:text="INDICE"
                android:textColor="#ff6600" />

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="#ff6600" />

            <ImageButton
                android:id="@+id/ayuda"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ayuda" />

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="#ff6600" />

            <Button
                android:id="@+id/siguiente"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="10dip"
                android:text="SIGUIENTE"
                android:textColor="#ff6600" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/table" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editTextVolumenAplicacionDeseado"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/editTextVolumenAplicacionDeseado"
                android:layout_marginRight="10dp"
                android:text="L/ha"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/seekBar1"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/seekBar1"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="km/h"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/TextView2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="Características del sistema hidráulico del equipo"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="16dp"
                android:text="Caudal de líquido total"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView10"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textView10"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/textView10"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:inputType="number|textVisiblePassword" >
            </EditText>

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/textView8"
                android:layout_below="@+id/TextView1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/TextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/seekBar1"
                android:layout_below="@+id/seekBar1"
                android:layout_marginTop="10dp"
                android:text="(Comprendida entre 0,99 y 6,01)"
                android:textColor="@color/green"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/velocidadAvance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignTop="@+id/seekBar1"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/textView7"
                android:layout_toRightOf="@+id/seekBar1"
                android:background="@color/white"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/velocidadAvance"
                android:layout_below="@+id/textView8"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/greylight"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView15"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="L/min"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView15"
                android:layout_below="@+id/textView15"
                android:layout_marginTop="10dp"
                android:text="Caudal de líquido por sector"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/velocidadAvance"
                android:layout_below="@+id/textView9"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/greylight"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView16"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="L/min"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView16"
                android:layout_below="@+id/textView16"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="Número total de boquillas"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <Switch
                android:id="@+id/switchVolumenAplicacionCalculado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:checked="true"
                android:onClick="onSwitchClicked "
                android:text="Volumen de aplicación \n calculado"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/switchVolumenAplicacionDeseado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/switchVolumenAplicacionCalculado"
                android:layout_below="@+id/textViewVolumenAplicacionCalculado"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/textView11"
                android:text="Volumen de aplicación deseado"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <Switch
                android:id="@+id/switchAnchoTrabajoCalculado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/switchVolumenAplicacionCalculado"
                android:layout_below="@+id/editTextVolumenAplicacionDeseado"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:checked="true"
                android:onClick="onSwitchClicked "
                android:text="Ancho de trabajo \n calculado"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/switchAnchoTrabajoDeseado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignRight="@+id/switchAnchoTrabajoCalculado"
                android:layout_below="@+id/textViewAnchoTrabajoCalculado"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Ancho de trabajo deseado"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/editTextAnchoTrabajoDesesado"
                android:layout_alignBottom="@+id/editTextAnchoTrabajoDesesado"
                android:layout_alignRight="@+id/TextView1"
                android:layout_marginRight="10dp"
                android:text="m"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/TextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView6"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="Velocidad de avance deseada (v)"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textViewVolumenAplicacionCalculado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/switchVolumenAplicacionCalculado"
                android:layout_below="@+id/switchVolumenAplicacionCalculado"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/textViewVolum"
                android:background="@color/greylight"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewVolum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textViewVolumenAplicacionCalculado"
                android:layout_alignBottom="@+id/textViewVolumenAplicacionCalculado"
                android:layout_alignLeft="@+id/textView5"
                android:text="L/ha"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/editTextVolumenAplicacionDeseado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/switchVolumenAplicacionDeseado"
                android:layout_below="@+id/switchVolumenAplicacionDeseado"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/textView5"
                android:background="#FFFFFF"
                android:ems="10"
                android:gravity="center"
                android:inputType="number|textVisiblePassword" />

            <TextView
                android:id="@+id/textViewAnchoTrabajoCalculado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/switchAnchoTrabajoDeseado"
                android:layout_below="@+id/switchAnchoTrabajoCalculado"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/TextView01"
                android:background="@color/greylight"
                android:gravity="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextAnchoTrabajoDesesado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/switchAnchoTrabajoDeseado"
                android:layout_alignRight="@+id/textViewAnchoTrabajoCalculado"
                android:layout_below="@+id/switchAnchoTrabajoDeseado"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:gravity="center"
                android:inputType="number|textVisiblePassword" >
            </EditText>

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/switchAnchoTrabajoDeseado"
                android:layout_alignLeft="@+id/textView6"
                android:layout_marginRight="10dp"
                android:text="m"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>