<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <TableLayout
        android:id="@+id/table"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="bottom" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/indice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="10dip"
                android:text="Índice"
                android:textColor="#E65F00" />

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="#E65F00" />

            <ImageButton
                android:id="@+id/ayuda"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/inter3"  />

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:background="#E65F00" />

            <Button
                android:id="@+id/siguiente"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="10dip"
                android:text="Siguiente"
                android:textColor="#E65F00" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/table" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent" >

            <RadioGroup
                android:id="@+id/radioAncho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/radioVolumen"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="232dp" >

                <RadioButton
                    android:id="@+id/RVelocidad1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/TextView10"
                    android:layout_below="@+id/TextView01"
                    android:ems="10"
                    android:text="Velocidad de avance calculada"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/RVelocidad2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/RadioButton02"
                    android:layout_below="@+id/RadioButton02"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:text="Velocidad de avance deseada"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/radioAncho"
                android:layout_marginRight="10dp"
                android:layout_marginTop="13dp"
                android:text="km/h"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/anchoCalculadoParteC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/radioAncho"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/textView5"
                android:layout_toRightOf="@+id/radioVolumen"
                android:background="#FFFFFF"
                android:ems="10"
                android:gravity="center"
                android:inputType="number|textVisiblePassword" >
            </EditText>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/radioAncho"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="m"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/velocidadAvance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignLeft="@+id/editText1"
                android:layout_alignRight="@+id/editText1"
                android:layout_alignTop="@+id/textView3"
                android:background="@color/white"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/radioAncho"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/radioAncho"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textViewVolum"
                android:layout_alignRight="@+id/anchoCalculadoParteC"
                android:layout_alignTop="@+id/radioVolumen"
                android:layout_marginTop="24dp"
                android:background="@color/white"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Ancho de trabajo"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <RadioGroup
                android:id="@+id/radioVolumen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView17"
                android:layout_below="@+id/textView17" >

                <RadioButton
                    android:id="@+id/RAncho1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="18dp"
                    android:ems="10"
                    android:text="Ancho de la calle calculado"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/RAncho2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:text="Ancho de la calle deseado"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/anchoCalculadoParteC"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Características del sistema hidráulico del equipo"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView18"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Número de boquillas por zona"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/Rojo"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/textView19"
                android:layout_below="@+id/textView19"
                android:layout_marginTop="10dp"
                android:background="@color/red" />

            <ImageView
                android:id="@+id/Naranja"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/textView19"
                android:layout_below="@+id/Rojo"
                android:layout_marginTop="8dp"
                android:background="@color/orange" />

            <ImageView
                android:id="@+id/Verde"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/textView19"
                android:layout_below="@+id/Naranja"
                android:layout_marginTop="8dp"
                android:background="@color/green" />

            <TextView
                android:id="@+id/ZonaAlta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Rojo"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/Rojo"
                android:text="Zona Alta (nA)"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/ZonaMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Verde"
                android:layout_alignLeft="@+id/ZonaAlta"
                android:text="Zona Media (nM)"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/ZonaBaja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Verde"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/Verde"
                android:text="Zona Baja (nB)"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/textoZonaAlta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Rojo"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/ZonaAlta"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:inputType="number|textVisiblePassword" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/textoZonaMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Naranja"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/ZonaMedia"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:inputType="number|textVisiblePassword" />

            <EditText
                android:id="@+id/textoZonaBaja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/Verde"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/ZonaBaja"
                android:background="@color/white"
                android:ems="10"
                android:gravity="center"
                android:inputType="number|textVisiblePassword" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/Verde"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Velocidad de avance"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/anchoCalleParteC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/anchoCalculadoParteC"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@+id/radioVolumen"
                android:background="@color/white" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView15"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="km/h"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textViewVolum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/anchoCalleParteC"
                android:layout_alignBottom="@+id/anchoCalleParteC"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="m"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/textView6"
                android:layout_toRightOf="@+id/radioAncho"
                android:background="#FFFFFF"
                android:ems="10"
                android:gravity="center"
                android:inputType="number|textVisiblePassword" >
            </EditText>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>