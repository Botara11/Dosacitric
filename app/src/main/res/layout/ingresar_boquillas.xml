<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/Referencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:text="REFERENCIA"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Caudal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:text="CAUDAL"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Presion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText3"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:text="PRESIÓN"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="bottom" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_horizontal" >

            <Button
                android:id="@+id/botonIngresar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:padding="10dip"
                android:text="Ingresar"
                android:textColor="#ff6600" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Referencia"
        android:layout_below="@+id/Referencia"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="(Marca, modelo y color de la boquilla)"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Caudal"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Caudal"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:digits=",.1234567890"
        android:ems="10"
        android:gravity="center"
        android:inputType="number|textVisiblePassword"
        android:maxLength="10"
        android:singleLine="true" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Presion"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/Presion"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:digits=",.1234567890"
        android:ems="10"
        android:gravity="center"
        android:inputType="number|textVisiblePassword"
        android:maxLength="10"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Caudal"
        android:layout_alignBottom="@+id/Caudal"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/Caudal"
        android:text="(L/min)"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Presion"
        android:layout_alignBottom="@+id/Presion"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/Presion"
        android:text="(bar)"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView2"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:digits=" /-ABCDEFGHIJKLMNÑOPQRSTUVWXYZabcdefghijklmnñopqrstuvwxyz1234567890"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:maxLength="30"
        android:maxLines="1"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

</RelativeLayout>